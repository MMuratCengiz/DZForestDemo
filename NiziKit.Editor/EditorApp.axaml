<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:semi="https://irihi.tech/semi"
             xmlns:dockThemes="clr-namespace:Dock.Avalonia.Themes.Fluent;assembly=Dock.Avalonia.Themes.Fluent"
             xmlns:dock="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
             xmlns:views="using:NiziKit.Editor.Views"
             x:Class="NiziKit.Editor.EditorApp"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <views:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>

        <Color x:Key="PanelBackgroundColor">#E6202020</Color>
        <Color x:Key="PanelBackgroundSolidColor">#202020</Color>
        <Color x:Key="PanelBorderColor">#40FFFFFF</Color>
        <Color x:Key="SurfaceColor">#2D2D2D</Color>
        <Color x:Key="SurfaceLightColor">#383838</Color>
        <Color x:Key="SurfaceDarkColor">#1A1A1A</Color>

        <Color x:Key="TextPrimaryColor">#EEEEEE</Color>
        <Color x:Key="TextSecondaryColor">#A0A0A0</Color>
        <Color x:Key="TextMutedColor">#707070</Color>
        <Color x:Key="TextDisabledColor">#505050</Color>

        <Color x:Key="AccentColor">#3A8EC9</Color>
        <Color x:Key="AccentHoverColor">#4DA3DE</Color>
        <Color x:Key="AccentPressedColor">#2D7AB3</Color>
        <Color x:Key="SelectionColor">#40428BCA</Color>

        <Color x:Key="DangerColor">#C75450</Color>
        <Color x:Key="DangerHoverColor">#D96662</Color>
        <Color x:Key="WarningColor">#D4A03A</Color>
        <Color x:Key="SuccessColor">#5A9A68</Color>

        <Color x:Key="AxisXColor">#E05555</Color>
        <Color x:Key="AxisYColor">#55CC55</Color>
        <Color x:Key="AxisZColor">#5588EE</Color>

        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource PanelBorderColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
        <SolidColorBrush x:Key="SurfaceDarkBrush" Color="{StaticResource SurfaceDarkColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>

        <CornerRadius x:Key="EditorPanelCornerRadius">6</CornerRadius>
        <CornerRadius x:Key="EditorControlCornerRadius">3</CornerRadius>
        <CornerRadius x:Key="EditorButtonCornerRadius">3</CornerRadius>

        <Thickness x:Key="EditorPanelPadding">14</Thickness>
        <Thickness x:Key="EditorControlPadding">8,5</Thickness>
        <Thickness x:Key="EditorSectionSpacing">0,0,0,16</Thickness>

        <x:Double x:Key="EditorScenePanelWidth">400</x:Double>
        <x:Double x:Key="EditorComponentsPanelWidth">400</x:Double>
        <x:Double x:Key="EditorPanelOpacity">0.92</x:Double>

        <x:Double x:Key="EditorFontSizeSmall">24</x:Double>
        <x:Double x:Key="EditorFontSizeNormal">26</x:Double>
        <x:Double x:Key="EditorFontSizeLarge">28</x:Double>
        <x:Double x:Key="EditorFontSizeHeader">30</x:Double>

        <x:Double x:Key="FileBrowserCellSize">180</x:Double>
        <x:Double x:Key="FileBrowserIconSize">72</x:Double>
        <x:Double x:Key="FileBrowserCellFontSize">24</x:Double>

        <x:Double x:Key="DockFontSizeNormal">26</x:Double>
        <x:Double x:Key="DockDragPreviewFontSize">24</x:Double>
        <x:Double x:Key="TabStripItemMinHeight">56</x:Double>
        <x:Double x:Key="DockSplitterSize">6</x:Double>
        <SolidColorBrush x:Key="DockThemeBackgroundBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="DockThemeForegroundBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="DockThemeBorderLowBrush" Color="#50FFFFFF"/>
        <SolidColorBrush x:Key="DockThemeControlBackgroundBrush" Color="{StaticResource SurfaceDarkColor}"/>
        <SolidColorBrush x:Key="DockApplicationAccentBrushLow" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="DockApplicationAccentBrushMed" Color="{StaticResource SurfaceLightColor}"/>
        <SolidColorBrush x:Key="DockApplicationAccentBrushHigh" Color="{StaticResource AccentHoverColor}"/>
        <SolidColorBrush x:Key="DockApplicationAccentForegroundBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="DockApplicationAccentBrushIndicator" Color="{StaticResource AccentColor}"/>
    </Application.Resources>

    <Application.Styles>
        <semi:SemiTheme />
        <dockThemes:DockFluentTheme />

        <Style Selector=":is(TopLevel)">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="TemplatedControl">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
        </Style>

        <Style Selector="Border.panel">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{DynamicResource EditorPanelCornerRadius}"/>
            <Setter Property="Padding" Value="{DynamicResource EditorPanelPadding}"/>
        </Style>

        <Style Selector="Border.panel-section">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="{DynamicResource EditorControlCornerRadius}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeHeader}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeSmall}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="TextBlock.muted">
            <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
        </Style>

        <Style Selector="TextBlock.component-name">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="TreeViewItem">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
            <Setter Property="Padding" Value="4,3"/>
        </Style>

        <Style Selector="MenuItem">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
        </Style>

        <Style Selector="Expander">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="{DynamicResource EditorControlCornerRadius}"/>
            <Setter Property="Padding" Value="{DynamicResource EditorControlPadding}"/>
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="{DynamicResource EditorButtonCornerRadius}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
        </Style>

        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.danger">
            <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.ghost">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.ghost:pointerover">
            <Setter Property="Background" Value="#20FFFFFF"/>
        </Style>
        <Style Selector="Button.ghost:pressed">
            <Setter Property="Background" Value="#10FFFFFF"/>
        </Style>

        <Style Selector="ToggleButton.collapse">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>
        <Style Selector="ToggleButton.collapse:pointerover">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>
        <Style Selector="ToggleButton.collapse:pressed">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.collapse:checked">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.collapse /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.collapse:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.collapse:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.collapse:checked /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="Border.separator">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <Style Selector="TabControl">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        </Style>

        <Style Selector="TabItem:selected">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style Selector="TabItem:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style Selector="GridSplitter">
            <Setter Property="Background" Value="#30FFFFFF"/>
        </Style>

        <Style Selector="GridSplitter:pointerover">
            <Setter Property="Background" Value="#50FFFFFF"/>
        </Style>

        <Style Selector="Border.file-tile">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style Selector="Border.file-tile:pointerover">
            <Setter Property="Background" Value="#20FFFFFF"/>
        </Style>

        <Style Selector="Border.file-tile.selected">
            <Setter Property="Background" Value="{DynamicResource SelectionColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style Selector="ProgressBar">
            <Setter Property="Background" Value="{DynamicResource SurfaceDarkBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>

        <Style Selector="RadioButton">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
        </Style>

        <Style Selector="dock|ToolControl">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
        </Style>

        <Style Selector="dock|ToolControl /template/ Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceDarkBrush}"/>
        </Style>

        <Style Selector="dock|ToolTabStripItem">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceDarkBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        </Style>

        <Style Selector="dock|ToolTabStripItem:selected">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        </Style>

        <Style Selector="dock|ToolTabStripItem:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style Selector="dock|DocumentTabStripItem">
            <Setter Property="FontSize" Value="{DynamicResource EditorFontSizeNormal}"/>
            <Setter Property="Padding" Value="16,8"/>
        </Style>

        <Style Selector="dock|DockControl">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="dock|RootDockControl">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="dock|ProportionalDockControl">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style Selector="ProportionalStackPanelSplitter">
            <Setter Property="Background" Value="#40FFFFFF"/>
        </Style>

        <Style Selector="ProportionalStackPanelSplitter:pointerover">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
        </Style>

        <Style Selector="ProportionalStackPanelSplitter:horizontal">
            <Setter Property="MinHeight" Value="6"/>
            <Setter Property="Cursor" Value="SizeNorthSouth"/>
        </Style>

        <Style Selector="ProportionalStackPanelSplitter:vertical">
            <Setter Property="MinWidth" Value="6"/>
            <Setter Property="Cursor" Value="SizeWestEast"/>
        </Style>
    </Application.Styles>

</Application>
