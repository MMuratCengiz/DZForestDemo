<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:views="using:NiziKit.Editor.Views"
             x:Class="NiziKit.Editor.EditorApp"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <views:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>

        <!-- Only truly editor-specific colors -->
        <Color x:Key="AxisXColor">#E05555</Color>
        <Color x:Key="AxisYColor">#55CC55</Color>
        <Color x:Key="AxisZColor">#5588EE</Color>

        <SolidColorBrush x:Key="AxisXBrush" Color="{StaticResource AxisXColor}"/>
        <SolidColorBrush x:Key="AxisYBrush" Color="{StaticResource AxisYColor}"/>
        <SolidColorBrush x:Key="AxisZBrush" Color="{StaticResource AxisZColor}"/>

        <!-- Editor panel backgrounds with 75% opacity (0xBF = 191/255 = 0.75) -->
        <SolidColorBrush x:Key="EditorPanelBackground" Color="#BF2D2D2D"/>
        <SolidColorBrush x:Key="EditorPanelSecondaryBackground" Color="#BF252525"/>
        <SolidColorBrush x:Key="EditorPanelBorder" Color="#BF3D3D3D"/>
    </Application.Resources>

    <Application.Styles>
        <sty:FluentAvaloniaTheme />

        <!-- Transparent background for game overlay -->
        <Style Selector=":is(TopLevel)">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <!-- Base font size for all controls -->
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="ToggleButton">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="ComboBoxItem">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="MenuItem">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="TreeViewItem">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="RadioButton">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style Selector="Label">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Application.Styles>

</Application>
