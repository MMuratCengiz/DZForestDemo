<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:views="using:NiziKit.Editor.Views"
             xmlns:editors="using:NiziKit.Editor.Views.Editors"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="NiziKit.Editor.EditorMainView"
             x:DataType="vm:EditorViewModel"
             Background="Transparent"
             DragDrop.AllowDrop="True">

    <UserControl.Resources>
        <views:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
    </UserControl.Resources>

    <Panel>
        <Grid RowDefinitions="Auto,*,Auto">
            <Border Grid.Row="0"
                    Background="{StaticResource EditorPanelBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="0,0,0,1"
                    Padding="8,4">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Menu Grid.Column="0" VerticalAlignment="Center">
                        <MenuItem Header="File">
                            <MenuItem Header="Open Scene..." Command="{Binding OpenSceneCommand}" InputGesture="Ctrl+O"/>
                            <MenuItem Header="Save Scene" Command="{Binding SaveSceneCommand}" InputGesture="Ctrl+S"/>
                        </MenuItem>
                        <MenuItem Header="Edit">
                            <MenuItem Header="New Object" Command="{Binding NewObjectCommand}"/>
                            <MenuItem Header="New Child" Command="{Binding NewChildObjectCommand}"
                                      IsEnabled="{Binding HasSelection}"/>
                            <Separator/>
                            <MenuItem Header="Duplicate" Command="{Binding DuplicateObjectCommand}"
                                      IsEnabled="{Binding HasSelection}"/>
                            <MenuItem Header="Delete" Command="{Binding DeleteObjectCommand}"
                                      IsEnabled="{Binding HasSelection}"/>
                        </MenuItem>
                        <MenuItem Header="Assets">
                            <MenuItem Header="Import..." Command="{Binding OpenImportPanelCommand}"/>
                            <Separator/>
                            <MenuItem Header="Refresh" Command="{Binding RefreshAssetsCommand}"/>
                        </MenuItem>
                    </Menu>

                    <Border Grid.Column="2"
                            Background="{StaticResource EditorAccentGradient}"
                            Padding="16,8"
                            VerticalAlignment="Center">
                        <TextBlock Text="NiziKit Editor"
                                   FontWeight="Bold"
                                   Foreground="#FFFFFF"/>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
                <Border Grid.Column="0"
                        Background="{StaticResource EditorPanelBackground}"
                        BorderBrush="{StaticResource EditorPanelBorder}"
                        BorderThickness="0,0,1,0"
                        Padding="16"
                        MinWidth="{StaticResource PanelMinWidth}"
                        MaxWidth="{StaticResource PanelMaxWidth}"
                        Width="380">
                    <Grid RowDefinitions="Auto,Auto,*">
                        <Border Grid.Row="0"
                                Background="{StaticResource EditorAccentGradient}"
                                Padding="12,8"
                                Margin="-16,-16,-16,16">
                            <TextBlock Text="Scene Hierarchy"
                                       Classes="subtitle"
                                       Foreground="#FFFFFF"/>
                        </Border>

                        <Border Grid.Row="1"
                                Background="{StaticResource EditorSurfaceRaised}"
                                Padding="10,8"
                                Margin="0,0,0,12">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Text="{Binding SceneName, FallbackValue='Untitled Scene'}"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource EditorTextSecondary}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                    <Button Command="{Binding NewObjectCommand}"
                                            ToolTip.Tip="Add Object"
                                            Padding="8"
                                            Classes="ghost">
                                        <ui:SymbolIcon Symbol="Add" FontSize="{StaticResource IconSizeSmall}"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <views:SceneTreeView Grid.Row="2" DataContext="{Binding}"/>
                    </Grid>
                </Border>

                <Panel Grid.Column="1" MinWidth="200">
                    <Border Background="Transparent" IsHitTestVisible="False"/>
                    <views:ViewportToolbar HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Margin="0,12,0,0"
                                           DataContext="{Binding}"/>
                </Panel>

                <Border Grid.Column="2"
                        Background="{StaticResource EditorPanelBackground}"
                        BorderBrush="{StaticResource EditorPanelBorder}"
                        BorderThickness="1,0,0,0"
                        Padding="16"
                        MinWidth="{StaticResource PanelMinWidth}"
                        MaxWidth="{StaticResource PanelMaxWidth}"
                        Width="420">
                    <Grid RowDefinitions="Auto,*">
                        <Border Grid.Row="0"
                                Background="{StaticResource EditorAccentGradient}"
                                Padding="12,8"
                                Margin="-16,-16,-16,16">
                            <TextBlock Text="Inspector"
                                       Classes="subtitle"
                                       Foreground="#FFFFFF"/>
                        </Border>

                        <views:ComponentsPanel Grid.Row="1" DataContext="{Binding}"/>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="2"
                    Background="{StaticResource EditorPanelSecondaryBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="0,1,0,0"
                    Height="56">
                <Grid ColumnDefinitions="*,Auto,*">
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="16"
                                VerticalAlignment="Center">
                        <ToggleButton IsChecked="{Binding IsContentBrowserOpen, Mode=TwoWay}"
                                      Padding="20,8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ui:SymbolIcon Symbol="Folder" FontSize="{StaticResource IconSizeBase}"/>
                                <TextBlock Text="Content Browser" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid IsVisible="{Binding IsContentBrowserOpen}"
              ColumnDefinitions="Auto,*,Auto"
              RowDefinitions="*,Auto,Auto">
            <Border Grid.Column="0" Grid.Row="1" Width="380" Classes="spacer"/>
            <Border Grid.Column="1" Grid.Row="1"
                    Background="{StaticResource EditorPanelBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="1,1,1,0"
                    MinWidth="600"
                    MinHeight="400"
                    MaxHeight="900"
                    Height="750">
                <Grid RowDefinitions="Auto,Auto,*">
                    <Border Grid.Row="0"
                            Background="{StaticResource EditorAccentGradient}"
                            Padding="16,10">
                        <Grid ColumnDefinitions="Auto,Auto,*,Auto">
                            <TextBlock Text="Content Browser"
                                       Classes="subtitle"
                                       Foreground="#FFFFFF"
                                       VerticalAlignment="Center"
                                       Margin="8,0,16,0"/>
                            <Border Grid.Column="1"
                                    Width="1"
                                    Background="#40FFFFFF"
                                    Margin="0,4"/>
                            <ScrollViewer Grid.Column="2"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled"
                                          Margin="12,0">
                                <ItemsControl ItemsSource="{Binding ContentBrowserViewModel.Tabs}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:ContentTab">
                                            <Border Background="#20FFFFFF"
                                                    Padding="12,6"
                                                    Margin="2"
                                                    Cursor="Hand"
                                                    PointerPressed="OnContentBrowserTabPointerPressed">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <ui:SymbolIcon Symbol="Folder" FontSize="{StaticResource IconSizeXS}" Foreground="#FFFFFF"/>
                                                    <TextBlock Text="{Binding Title}"
                                                               Foreground="#FFFFFF"
                                                               VerticalAlignment="Center"/>
                                                    <Button IsVisible="{Binding IsCloseable}"
                                                            Command="{Binding $parent[ItemsControl].DataContext.ContentBrowserViewModel.CloseTabCommand}"
                                                            CommandParameter="{Binding}"
                                                            Padding="4"
                                                            Margin="4,0,0,0"
                                                            Classes="ghost">
                                                        <ui:SymbolIcon Symbol="Dismiss" FontSize="{StaticResource IconSizeXS}" Foreground="#FFFFFF"/>
                                                    </Button>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <Button Grid.Column="3"
                                    Command="{Binding CloseContentBrowserCommand}"
                                    ToolTip.Tip="Close"
                                    Padding="8"
                                    Classes="ghost">
                                <ui:SymbolIcon Symbol="Dismiss" FontSize="{StaticResource IconSizeSmall}" Foreground="#FFFFFF"/>
                            </Button>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" Height="1" Background="{StaticResource EditorPanelBorder}"/>
                    <views:ContentBrowserView Grid.Row="2"
                                              DataContext="{Binding ContentBrowserViewModel}"/>
                </Grid>
            </Border>

            <Border Grid.Column="2" Grid.Row="1" Width="420" Classes="spacer"/>
            <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Height="56" Classes="spacer"/>
        </Grid>

        <Border IsVisible="{Binding ContentBrowserViewModel.IsAssetEditorOpen}"
                Classes="dialog-overlay"
                ZIndex="500">
            <editors:AssetEditorDialog DataContext="{Binding ContentBrowserViewModel}"/>
        </Border>

        <Border IsVisible="{Binding IsImportPanelOpen}"
                Classes="dialog-overlay"
                ZIndex="1000">
            <Border Classes="dialog-container-large"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="40">
                <Grid RowDefinitions="Auto,Auto,*">
                    <Border Grid.Row="0"
                            Background="{StaticResource EditorAccentGradient}"
                            Padding="24,14">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Import Assets"
                                       Classes="subtitle"
                                       Foreground="#FFFFFF"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Command="{Binding CloseImportPanelCommand}"
                                    ToolTip.Tip="Close"
                                    Padding="8"
                                    Classes="ghost">
                                <ui:SymbolIcon Symbol="Dismiss" FontSize="{StaticResource IconSizeSmall}" Foreground="#FFFFFF"/>
                            </Button>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" Height="1" Background="{StaticResource EditorPanelBorder}"/>
                    <views:ImportPanel Grid.Row="2"
                                       DataContext="{Binding ImportViewModel}"/>
                </Grid>
            </Border>
        </Border>

        <Border IsVisible="{Binding IsAssetPickerOpen}"
                Classes="dialog-overlay"
                ZIndex="600">
            <editors:AssetPickerDialog x:Name="AssetPickerDialog"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
        </Border>

        <Border IsVisible="{Binding IsOpenSceneDialogOpen}"
                Classes="dialog-overlay"
                ZIndex="1100">
            <Border Classes="dialog-container-large"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="800"
                    Height="600"
                    Margin="40">
                <Grid RowDefinitions="Auto,Auto,*">
                    <Border Grid.Row="0"
                            Background="{StaticResource EditorAccentGradient}"
                            Padding="24,14">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Open Scene"
                                       Classes="subtitle"
                                       Foreground="#FFFFFF"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Command="{Binding CloseOpenSceneDialogCommand}"
                                    ToolTip.Tip="Close"
                                    Padding="8"
                                    Classes="ghost">
                                <ui:SymbolIcon Symbol="Dismiss" FontSize="{StaticResource IconSizeSmall}" Foreground="#FFFFFF"/>
                            </Button>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" Height="1" Background="{StaticResource EditorPanelBorder}"/>
                    <views:FileBrowserGrid Grid.Row="2"
                                           x:Name="SceneBrowserGrid"
                                           DataContext="{Binding SceneBrowserViewModel}"
                                           Margin="16"/>
                </Grid>
            </Border>
        </Border>

        <Border IsVisible="{Binding IsSavePromptOpen}"
                Classes="dialog-overlay"
                ZIndex="1200">
            <Border Background="{StaticResource EditorPanelBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="32"
                    MinWidth="420">
                <StackPanel Spacing="24">
                    <Border Background="{StaticResource EditorWarning}"
                            Padding="16,12"
                            Margin="-32,-32,-32,0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ui:SymbolIcon Symbol="Important" FontSize="{StaticResource IconSizeMedium}" Foreground="#11111B"/>
                            <TextBlock Text="Unsaved Changes"
                                       Classes="subtitle"
                                       Foreground="#11111B"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="The current scene has unsaved changes. Would you like to save before opening another scene?"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{StaticResource EditorTextSecondary}"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="12">
                        <Button Content="Save"
                                Command="{Binding SavePromptSaveCommand}"
                                Classes="accent"
                                Padding="24,10"/>
                        <Button Content="Don't Save"
                                Command="{Binding SavePromptDiscardCommand}"
                                Padding="24,10"/>
                        <Button Content="Cancel"
                                Command="{Binding SavePromptCancelCommand}"
                                Classes="ghost"
                                Padding="24,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Panel>
</UserControl>
