<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:views="using:NiziKit.Editor.Views"
             xmlns:editors="using:NiziKit.Editor.Views.Editors"
             x:Class="NiziKit.Editor.EditorMainView"
             x:DataType="vm:EditorViewModel"
             Background="Transparent">

    <UserControl.Resources>
        <views:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
    </UserControl.Resources>

    <Panel>
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Menu Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceDarkBrush}"
                    Padding="4,2">
                <Menu Background="Transparent">
                    <MenuItem Header="File">
                        <MenuItem Header="Save Scene" Command="{Binding SaveSceneCommand}" InputGesture="Ctrl+S"/>
                    </MenuItem>
                    <MenuItem Header="Edit">
                        <MenuItem Header="New Object" Command="{Binding NewObjectCommand}"/>
                        <MenuItem Header="New Child" Command="{Binding NewChildObjectCommand}"
                                  IsEnabled="{Binding HasSelection}"/>
                        <Separator/>
                        <MenuItem Header="Duplicate" Command="{Binding DuplicateObjectCommand}"
                                  IsEnabled="{Binding HasSelection}"/>
                        <MenuItem Header="Delete" Command="{Binding DeleteObjectCommand}"
                                  IsEnabled="{Binding HasSelection}"/>
                    </MenuItem>
                    <MenuItem Header="Assets">
                        <MenuItem Header="Import..." Command="{Binding OpenImportPanelCommand}"/>
                        <Separator/>
                        <MenuItem Header="Refresh" Command="{Binding RefreshAssetsCommand}"/>
                    </MenuItem>
                </Menu>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" ColumnDefinitions="380,*,420">
                <!-- Left Panel: Scene Tree -->
                <Border Grid.Column="0"
                        Classes="panel"
                        Margin="8,8,4,8"
                        Opacity="{DynamicResource EditorPanelOpacity}">
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock Grid.Row="0"
                                   Text="Scene"
                                   Classes="section-header"
                                   Margin="0,0,0,8"/>
                        <views:SceneTreeView Grid.Row="1"
                                             DataContext="{Binding}"/>
                    </Grid>
                </Border>

                <!-- Center: Viewport (empty/transparent for game rendering) -->
                <Panel Grid.Column="1" Background="Transparent"/>

                <!-- Right Panel: Inspector -->
                <Border Grid.Column="2"
                        Classes="panel"
                        Margin="4,8,8,8"
                        Opacity="{DynamicResource EditorPanelOpacity}">
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock Grid.Row="0"
                                   Text="Inspector"
                                   Classes="section-header"
                                   Margin="0,0,0,8"/>
                        <views:ComponentsPanel Grid.Row="1"
                                               DataContext="{Binding}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Bottom Taskbar -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceDarkBrush}"
                    BorderBrush="{DynamicResource PanelBorderBrush}"
                    BorderThickness="0,1,0,0"
                    Height="{DynamicResource EditorTaskbarHeight}">
                <!-- Centered taskbar buttons -->
                <StackPanel Orientation="Horizontal"
                            Spacing="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <ToggleButton x:Name="AssetBrowserToggle"
                                  IsChecked="{Binding IsAssetBrowserOpen, Mode=TwoWay}"
                                  Classes="taskbar-button">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z"
                                      Width="20" Height="20"/>
                            <TextBlock Text="Assets" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton x:Name="PackManagerToggle"
                                  IsChecked="{Binding IsPackManagerOpen, Mode=TwoWay}"
                                  Classes="taskbar-button">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="M3 3h8v8H3V3zm0 10h8v8H3v-8zm10-10h8v8h-8V3zm0 10h8v8h-8v-8z"
                                      Width="20" Height="20"/>
                            <TextBlock Text="Packs" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Asset Browser Popup Panel - positioned between side panels -->
        <Border IsVisible="{Binding IsAssetBrowserOpen}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="392,0,432,48">
            <Border Background="{DynamicResource PanelBackgroundSolidBrush}"
                    BorderBrush="{DynamicResource PanelBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8,8,0,0"
                    Height="550">
                <Grid RowDefinitions="Auto,*">
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="16,12">
                        <TextBlock Text="Asset Browser"
                                   Classes="section-header"
                                   VerticalAlignment="Center"
                                   Margin="0"/>
                        <Button Grid.Column="1"
                                Content="X"
                                Command="{Binding CloseAssetBrowserCommand}"
                                Classes="ghost"
                                Padding="8,4"/>
                    </Grid>
                    <views:AssetBrowserView Grid.Row="1"
                                            DataContext="{Binding AssetBrowserViewModel}"
                                            Margin="8,0,8,8"/>
                </Grid>
            </Border>
        </Border>

        <!-- Pack Manager Popup Panel - positioned between side panels -->
        <Border IsVisible="{Binding IsPackManagerOpen}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="392,0,432,48">
            <Border Background="{DynamicResource PanelBackgroundSolidBrush}"
                    BorderBrush="{DynamicResource PanelBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8,8,0,0"
                    Height="550">
                <Grid RowDefinitions="Auto,*">
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="16,12">
                        <TextBlock Text="Pack Manager"
                                   Classes="section-header"
                                   VerticalAlignment="Center"
                                   Margin="0"/>
                        <Button Grid.Column="1"
                                Content="X"
                                Command="{Binding ClosePackManagerCommand}"
                                Classes="ghost"
                                Padding="8,4"/>
                    </Grid>
                    <views:PackManagerView Grid.Row="1"
                                           DataContext="{Binding PackManagerViewModel}"
                                           Margin="8,0,8,8"/>
                </Grid>
            </Border>
        </Border>

        <!-- Import Panel Modal -->
        <Border IsVisible="{Binding IsImportPanelOpen}"
                Background="{DynamicResource ModalOverlayBrush}"
                ZIndex="1000">
            <Border Background="{DynamicResource ModalBackgroundBrush}"
                    BorderBrush="{DynamicResource ModalBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="1400"
                    Height="900">
                <Grid RowDefinitions="Auto,*">
                    <Button Grid.Row="0"
                            Content="X"
                            Command="{Binding CloseImportPanelCommand}"
                            Classes="ghost"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="8"
                            Padding="8,4"
                            ZIndex="100"/>

                    <views:ImportPanel Grid.Row="0" Grid.RowSpan="2"
                                       DataContext="{Binding ImportViewModel}"/>
                </Grid>
            </Border>
        </Border>

        <!-- Asset Picker Overlay -->
        <Border IsVisible="{Binding IsAssetPickerOpen}"
                Background="{DynamicResource ModalOverlayBrush}">
            <editors:AssetPickerDialog x:Name="AssetPickerDialog"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
        </Border>
    </Panel>
</UserControl>
