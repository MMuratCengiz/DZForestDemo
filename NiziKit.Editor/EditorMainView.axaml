<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:views="using:NiziKit.Editor.Views"
             xmlns:editors="using:NiziKit.Editor.Views.Editors"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="NiziKit.Editor.EditorMainView"
             x:DataType="vm:EditorViewModel"
             Background="Transparent">

    <UserControl.Resources>
        <views:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
    </UserControl.Resources>

    <Panel>
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Menu Bar -->
            <Border Grid.Row="0"
                    Background="{StaticResource EditorPanelBackground}"
                    Padding="4,2">
                <Menu Background="Transparent">
                    <MenuItem Header="File">
                        <MenuItem Header="Save Scene" Command="{Binding SaveSceneCommand}" InputGesture="Ctrl+S"/>
                    </MenuItem>
                    <MenuItem Header="Edit">
                        <MenuItem Header="New Object" Command="{Binding NewObjectCommand}"/>
                        <MenuItem Header="New Child" Command="{Binding NewChildObjectCommand}"
                                  IsEnabled="{Binding HasSelection}"/>
                        <Separator/>
                        <MenuItem Header="Duplicate" Command="{Binding DuplicateObjectCommand}"
                                  IsEnabled="{Binding HasSelection}"/>
                        <MenuItem Header="Delete" Command="{Binding DeleteObjectCommand}"
                                  IsEnabled="{Binding HasSelection}"/>
                    </MenuItem>
                    <MenuItem Header="Assets">
                        <MenuItem Header="Import..." Command="{Binding OpenImportPanelCommand}"/>
                        <Separator/>
                        <MenuItem Header="Refresh" Command="{Binding RefreshAssetsCommand}"/>
                    </MenuItem>
                </Menu>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" ColumnDefinitions="380,*,420">
                <!-- Left Panel: Scene Tree -->
                <Border Grid.Column="0"
                        Background="{StaticResource EditorPanelBackground}"
                        BorderBrush="{StaticResource EditorPanelBorder}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="8,8,4,8">
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock Grid.Row="0"
                                   Text="Scene"
                                   Theme="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,12"/>
                        <views:SceneTreeView Grid.Row="1"
                                             DataContext="{Binding}"/>
                    </Grid>
                </Border>

                <!-- Center: Viewport (empty/transparent for game rendering) -->
                <Panel Grid.Column="1" Background="Transparent">
                    <views:ViewportToolbar HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Margin="0,8,0,0"
                                           DataContext="{Binding}"/>
                </Panel>

                <!-- Right Panel: Inspector -->
                <Border Grid.Column="2"
                        Background="{StaticResource EditorPanelBackground}"
                        BorderBrush="{StaticResource EditorPanelBorder}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="4,8,8,8">
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock Grid.Row="0"
                                   Text="Inspector"
                                   Theme="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,12"/>
                        <views:ComponentsPanel Grid.Row="1"
                                               DataContext="{Binding}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Bottom Taskbar -->
            <Border Grid.Row="2"
                    Background="{StaticResource EditorPanelBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="0,1,0,0"
                    Height="60">
                <StackPanel Orientation="Horizontal"
                            Spacing="12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <ToggleButton IsChecked="{Binding IsAssetBrowserOpen, Mode=TwoWay}"
                                  Padding="20,10">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ui:SymbolIcon Symbol="Folder" FontSize="24"/>
                            <TextBlock Text="Assets" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton IsChecked="{Binding IsPackManagerOpen, Mode=TwoWay}"
                                  Padding="20,10">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ui:SymbolIcon Symbol="AllApps" FontSize="24"/>
                            <TextBlock Text="Packs" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Asset Browser Popup Panel -->
        <Border IsVisible="{Binding IsAssetBrowserOpen}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="392,0,432,60">
            <Border Background="{StaticResource EditorPanelBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="1"
                    CornerRadius="8,8,0,0"
                    Height="600">
                <Grid RowDefinitions="Auto,Auto,*">
                    <!-- Title Bar -->
                    <Border Grid.Row="0"
                            Background="{StaticResource EditorPanelSecondaryBackground}"
                            CornerRadius="8,8,0,0"
                            Padding="20,16">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Text="Asset Browser"
                                           Theme="{StaticResource SubtitleTextBlockStyle}"
                                           VerticalAlignment="Center"/>
                                <Button Grid.Column="1"
                                        Command="{Binding CloseAssetBrowserCommand}"
                                        ToolTip.Tip="Close"
                                        Padding="8">
                                    <ui:SymbolIcon Symbol="Dismiss" FontSize="18"/>
                                </Button>
                            </Grid>
                        </Border>
                        <!-- Separator -->
                        <Border Grid.Row="1" Height="1" Background="{DynamicResource DividerStrokeColorDefaultBrush}"/>
                        <!-- Content -->
                    <views:AssetBrowserView Grid.Row="2"
                                            DataContext="{Binding AssetBrowserViewModel}"
                                            Margin="16"/>
                </Grid>
            </Border>
        </Border>

        <!-- Pack Manager Popup Panel -->
        <Border IsVisible="{Binding IsPackManagerOpen}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="392,0,432,60">
            <Border Background="{StaticResource EditorPanelBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="1"
                    CornerRadius="8,8,0,0"
                    Height="600">
                <Grid RowDefinitions="Auto,Auto,*">
                    <!-- Title Bar -->
                    <Border Grid.Row="0"
                            Background="{StaticResource EditorPanelSecondaryBackground}"
                            CornerRadius="8,8,0,0"
                            Padding="20,16">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Text="Pack Manager"
                                           Theme="{StaticResource SubtitleTextBlockStyle}"
                                           VerticalAlignment="Center"/>
                                <Button Grid.Column="1"
                                        Command="{Binding ClosePackManagerCommand}"
                                        ToolTip.Tip="Close"
                                        Padding="8">
                                    <ui:SymbolIcon Symbol="Dismiss" FontSize="18"/>
                                </Button>
                            </Grid>
                        </Border>
                        <!-- Separator -->
                        <Border Grid.Row="1" Height="1" Background="{DynamicResource DividerStrokeColorDefaultBrush}"/>
                        <!-- Content -->
                        <views:PackManagerView Grid.Row="2"
                                           DataContext="{Binding PackManagerViewModel}"
                                           Margin="16"/>
                </Grid>
            </Border>
        </Border>

        <!-- Import Panel Modal -->
        <Border IsVisible="{Binding IsImportPanelOpen}"
                Background="#60000000"
                ZIndex="1000">
            <Border Background="{StaticResource EditorPanelBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="1"
                    CornerRadius="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="1400"
                    Height="900">
                <Grid RowDefinitions="Auto,Auto,*">
                    <!-- Title Bar -->
                    <Border Grid.Row="0"
                            Background="{StaticResource EditorPanelSecondaryBackground}"
                            CornerRadius="8,8,0,0"
                            Padding="24,16">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Import Assets"
                                       Theme="{StaticResource SubtitleTextBlockStyle}"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Command="{Binding CloseImportPanelCommand}"
                                    ToolTip.Tip="Close"
                                    Padding="8">
                                <ui:SymbolIcon Symbol="Dismiss" FontSize="18"/>
                            </Button>
                        </Grid>
                    </Border>
                    <!-- Separator -->
                    <Border Grid.Row="1" Height="1" Background="{DynamicResource DividerStrokeColorDefaultBrush}"/>
                    <!-- Content -->
                    <views:ImportPanel Grid.Row="2"
                                       DataContext="{Binding ImportViewModel}"/>
                </Grid>
            </Border>
        </Border>

        <!-- Asset Picker Overlay -->
        <Border IsVisible="{Binding IsAssetPickerOpen}"
                Background="#60000000">
            <editors:AssetPickerDialog x:Name="AssetPickerDialog"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
        </Border>
    </Panel>
</UserControl>
