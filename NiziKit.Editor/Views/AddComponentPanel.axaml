<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             x:Class="NiziKit.Editor.Views.AddComponentPanel"
             x:DataType="vm:GameObjectViewModel">

    <Border Background="{StaticResource EditorSurfaceRaised}"
            BorderBrush="{StaticResource EditorPanelBorder}"
            BorderThickness="1"
            Padding="12"
            Margin="0,12,0,0">
        <StackPanel Spacing="8">
            <Border Background="{StaticResource EditorAccentBrush}"
                    Padding="10,8"
                    Margin="-12,-12,-12,8">
                <TextBlock Text="Add Component"
                           FontWeight="SemiBold"
                           Foreground="#FFFFFF"/>
            </Border>

            <ScrollViewer MaxHeight="280"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ComponentTypesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="12,10"
                                    Margin="0,2"
                                    Click="OnComponentTypeClicked"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Button Content="Cancel"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Padding="12,10"
                    Margin="0,8,0,0"
                    Command="{Binding ToggleAddComponentPanelCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
