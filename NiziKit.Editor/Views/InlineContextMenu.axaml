<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NiziKit.Editor.Views.InlineContextMenu"
             IsVisible="False">

    <Border x:Name="MenuBorder"
            Background="{StaticResource EditorPanelBackground}"
            BorderBrush="{StaticResource EditorPanelBorder}"
            BorderThickness="1"
            Padding="6"
            MinWidth="200"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BoxShadow="0 4 20 0 #50000000">
        <StackPanel x:Name="MenuItems" Spacing="2"/>
    </Border>

</UserControl>
