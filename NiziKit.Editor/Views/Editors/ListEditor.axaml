<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NiziKit.Editor.Views.Editors.ListEditor">

    <Border Background="{StaticResource EditorSurfaceRaised}"
            BorderBrush="{StaticResource EditorPanelBorder}"
            BorderThickness="1"
            Padding="10"
            Margin="0,6">
        <StackPanel Spacing="6">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock x:Name="CountLabel"
                           Text="0 items"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource EditorTextMuted}"/>
                <Button x:Name="AddButton"
                        Grid.Column="1"
                        Content="+"
                        Padding="10,6"
                        ToolTip.Tip="Add item"
                        Classes="accent"/>
            </Grid>

            <ItemsControl x:Name="ItemsControl"/>
        </StackPanel>
    </Border>
</UserControl>
