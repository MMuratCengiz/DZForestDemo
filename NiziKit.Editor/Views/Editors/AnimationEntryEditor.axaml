<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NiziKit.Editor.Views.Editors.AnimationEntryEditor">

    <Grid ColumnDefinitions="Auto,*,Auto">
        <Border x:Name="ExternalBadge"
                Grid.Column="0"
                Background="{StaticResource EditorInfo}"
                Padding="6,3"
                Margin="0,0,8,0"
                VerticalAlignment="Center"
                IsVisible="False">
            <TextBlock Text="Ext"
                       FontSize="{StaticResource FontSizeCaption}"
                       FontWeight="SemiBold"
                       Foreground="#11111B"/>
        </Border>

        <TextBlock x:Name="AnimationNameText"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis"/>
    </Grid>
</UserControl>
