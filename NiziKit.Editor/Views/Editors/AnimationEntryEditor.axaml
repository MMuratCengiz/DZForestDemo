<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NiziKit.Editor.Views.Editors.AnimationEntryEditor">

    <Grid ColumnDefinitions="Auto,*,Auto">
        <Border x:Name="ExternalBadge" 
                Grid.Column="0"
                Background="{DynamicResource SystemAccentColorLight1}"
                CornerRadius="4"
                Padding="4,2"
                Margin="0,0,6,0"
                VerticalAlignment="Center"
                IsVisible="False">
            <TextBlock Text="Ext" Classes="caption"/>
        </Border>
        
        <TextBlock x:Name="AnimationNameText"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis"/>
    </Grid>
</UserControl>
