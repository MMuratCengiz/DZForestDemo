<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NiziKit.Editor.Views.Editors.AnimationEntryEditor">

    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Spacing="4" Margin="0,0,0,4">
            <TextBlock Text="Name" Classes="caption"/>
            <TextBox x:Name="NameTextBox"/>
        </StackPanel>
        
        <StackPanel x:Name="SourcePanel" Grid.Row="1" Grid.ColumnSpan="2" Spacing="4" IsVisible="False">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="Source" Classes="caption"/>
                <Border x:Name="ExternalBadge" 
                        Grid.Column="1"
                        Background="{DynamicResource SystemAccentColorLight1}"
                        CornerRadius="4"
                        Padding="6,2"
                        IsVisible="False">
                    <TextBlock Text="External" Classes="caption"/>
                </Border>
            </Grid>
            <Grid ColumnDefinitions="*,Auto" Margin="0,2,0,0">
                <TextBox x:Name="SourceTextBox" IsReadOnly="True"/>
                <Button x:Name="BrowseButton" 
                        Grid.Column="1" 
                        Content="..." 
                        Padding="8,4"
                        Margin="4,0,0,0"
                        ToolTip.Tip="Browse for animation source"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
