<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="using:NiziKit.Editor.Views"
             x:Class="NiziKit.Editor.Views.Editors.Vector3Editor">

    <Grid ColumnDefinitions="*,*,*">
        <views:DraggableValueEditor Grid.Column="0"
                                    x:Name="XEditor"
                                    Label="X"
                                    LabelColor="#E06060"
                                    DragSensitivity="0.05"
                                    Margin="0,0,4,0"/>
        <views:DraggableValueEditor Grid.Column="1"
                                    x:Name="YEditor"
                                    Label="Y"
                                    LabelColor="#60E060"
                                    DragSensitivity="0.05"
                                    Margin="0,0,4,0"/>
        <views:DraggableValueEditor Grid.Column="2"
                                    x:Name="ZEditor"
                                    Label="Z"
                                    LabelColor="#6060E0"
                                    DragSensitivity="0.05"/>
    </Grid>
</UserControl>
