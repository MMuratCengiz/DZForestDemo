<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:views="using:NiziKit.Editor.Views"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="NiziKit.Editor.Views.ContentBrowserView"
             x:DataType="vm:ContentBrowserViewModel">

    <Panel>
        <Grid ColumnDefinitions="220,*">
            <!-- Left Sidebar: Folder Tree + Packs -->
            <Border Grid.Column="0"
                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,1,0"
                    Padding="8">
                <Grid RowDefinitions="Auto,*,Auto,Auto,*">
                    <!-- Folders Header -->
                    <TextBlock Grid.Row="0"
                               Text="Folders"
                               Theme="{StaticResource BodyStrongTextBlockStyle}"
                               Margin="8,4,0,8"/>

                    <!-- Folder Tree -->
                    <TreeView Grid.Row="1"
                              ItemsSource="{Binding FolderTree}"
                              SelectedItem="{Binding SelectedFolder}">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="{Binding IconData}"
                                              Width="16" Height="16"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="{Binding Name}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>

                    <!-- Separator -->
                    <Border Grid.Row="2"
                            Height="1"
                            Background="{DynamicResource DividerStrokeColorDefaultBrush}"
                            Margin="0,8"/>

                    <!-- Packs Header -->
                    <Grid Grid.Row="3" ColumnDefinitions="*,Auto" Margin="8,4,0,8">
                        <TextBlock Text="Packs"
                                   Theme="{StaticResource BodyStrongTextBlockStyle}"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Command="{Binding CreatePackCommand}"
                                ToolTip.Tip="Create new pack"
                                Padding="6">
                            <ui:SymbolIcon Symbol="Add" FontSize="14"/>
                        </Button>
                    </Grid>

                    <!-- Packs List -->
                    <ListBox Grid.Row="4"
                             ItemsSource="{Binding PackTree}"
                             SelectedItem="{Binding SelectedFolder}">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:FolderTreeNode">
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="4,2">
                                    <PathIcon Data="{Binding IconData}"
                                              Width="16" Height="16"
                                              Foreground="{DynamicResource AccentFillColorDefaultBrush}"/>
                                    <TextBlock Text="{Binding Name}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right: Content Area with Tabs -->
            <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*,Auto">
                <!-- Tab Bar -->
                <Border Grid.Row="0"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        Padding="4,0">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Tabs}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:ContentTab">
                                    <Border x:Name="TabBorder"
                                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                            CornerRadius="{DynamicResource ControlCornerRadius}"
                                            Padding="12,8"
                                            Margin="2"
                                            Cursor="Hand"
                                            PointerPressed="OnTabPointerPressed">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <ui:SymbolIcon Symbol="Folder" FontSize="14"/>
                                            <TextBlock Text="{Binding Title}"
                                                       VerticalAlignment="Center"/>
                                            <Button IsVisible="{Binding IsCloseable}"
                                                    Command="{Binding $parent[ItemsControl].DataContext.CloseTabCommand}"
                                                    CommandParameter="{Binding}"
                                                    Padding="4"
                                                    Margin="4,0,0,0">
                                                <ui:SymbolIcon Symbol="Dismiss" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Toolbar: Breadcrumbs + Filter + Search -->
                <Border Grid.Row="1"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Padding="12,8"
                        Margin="8,8,8,4">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                        <!-- Navigate Up -->
                        <Button Grid.Column="0"
                                Command="{Binding NavigateUpCommand}"
                                IsEnabled="{Binding CanNavigateUp}"
                                ToolTip.Tip="Go up"
                                Padding="8">
                            <ui:SymbolIcon Symbol="ChevronUp" FontSize="16"/>
                        </Button>

                        <!-- Breadcrumbs -->
                        <ScrollViewer Grid.Column="1"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled"
                                      Margin="8,0">
                            <ItemsControl ItemsSource="{Binding SelectedTab.Breadcrumbs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:BreadcrumbItem">
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding $parent[ItemsControl].DataContext.NavigateToCommand}"
                                                    CommandParameter="{Binding Path}"
                                                    Padding="8,4"
                                                    MaxWidth="150">
                                                <Button.Styles>
                                                    <Style Selector="Button > ContentPresenter > TextBlock">
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                    </Style>
                                                </Button.Styles>
                                            </Button>
                                            <TextBlock Text="/"
                                                       VerticalAlignment="Center"
                                                       Margin="4,0"
                                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Filter -->
                        <ComboBox Grid.Column="2"
                                  SelectedIndex="{Binding FilterIndex}"
                                  MinWidth="120"
                                  Margin="0,0,8,0">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Models"/>
                            <ComboBoxItem Content="Textures"/>
                            <ComboBoxItem Content="Materials"/>
                            <ComboBoxItem Content="Shaders"/>
                            <ComboBoxItem Content="Scenes"/>
                        </ComboBox>

                        <!-- Search -->
                        <TextBox Grid.Column="3"
                                 Text="{Binding SearchText}"
                                 Watermark="Search..."
                                 Width="180">
                            <TextBox.InnerLeftContent>
                                <ui:SymbolIcon Symbol="Find" FontSize="14" Margin="8,0,0,0"/>
                            </TextBox.InnerLeftContent>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Content Grid -->
                <Border Grid.Row="2"
                        x:Name="ContentGridBorder"
                        Margin="8,4,8,8"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="{DynamicResource ControlCornerRadius}">
                    <ListBox x:Name="ContentGrid"
                             ItemsSource="{Binding SelectedTab.Items}"
                             SelectedItem="{Binding SelectedItem}"
                             SelectionMode="Single"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             DoubleTapped="OnItemDoubleTapped"
                             PointerPressed="OnContentGridPointerPressed">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:ContentItem">
                                <Border Width="140"
                                        Height="140"
                                        Margin="4"
                                        Padding="8"
                                        CornerRadius="{DynamicResource ControlCornerRadius}"
                                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                        ToolTip.Tip="{Binding TypeLabel}"
                                        PointerPressed="OnItemPointerPressed">
                                    <Grid RowDefinitions="*,Auto,Auto">
                                        <!-- Icon -->
                                        <PathIcon Grid.Row="0"
                                                  Data="{Binding IconData}"
                                                  Width="40" Height="40"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>

                                        <!-- Name -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Name}"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextAlignment="Center"
                                                   MaxWidth="130"
                                                   Margin="0,8,0,0"
                                                   ToolTip.Tip="{Binding Name}"/>

                                        <!-- Model Info Badge -->
                                        <Border Grid.Row="2"
                                                IsVisible="{Binding HasModelInfo}"
                                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                CornerRadius="4"
                                                Padding="6,2"
                                                HorizontalAlignment="Center"
                                                Margin="0,4,0,0">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{Binding MeshCount}" Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                                <TextBlock Text="M" Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                                <TextBlock Text="{Binding AnimationCount}" IsVisible="{Binding HasSkeleton}" Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                                <TextBlock Text="A" IsVisible="{Binding HasSkeleton}" Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Status Bar -->
                <Border Grid.Row="3"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        Padding="12,6"
                        IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                </Border>
            </Grid>
        </Grid>

        <!-- Inline Context Menu (overlay) -->
        <views:InlineContextMenu x:Name="InlineMenu"/>
    </Panel>

</UserControl>
