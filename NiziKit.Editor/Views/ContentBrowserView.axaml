<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:views="using:NiziKit.Editor.Views"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="NiziKit.Editor.Views.ContentBrowserView"
             x:DataType="vm:ContentBrowserViewModel">

    <Panel>
        <Grid ColumnDefinitions="Auto,*">
            <Border Grid.Column="0"
                    Background="{StaticResource EditorPanelSecondaryBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="0,0,1,0"
                    Padding="12"
                    MinWidth="320"
                    MaxWidth="450"
                    Width="380">
                <Grid RowDefinitions="Auto,*">
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="8,4,0,16">
                        <TextBlock Text="Asset Packs"
                                   Classes="subtitle"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Command="{Binding CreatePackCommand}"
                                ToolTip.Tip="Create new pack"
                                Padding="10"
                                Classes="accent">
                            <ui:SymbolIcon Symbol="Add" FontSize="{StaticResource IconSizeLarge}" Foreground="#FFFFFF"/>
                        </Button>
                    </Grid>

                    <ScrollViewer Grid.Row="1"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="12">
                            <StackPanel>
                                <Border Background="{StaticResource EditorSuccess}"
                                        Padding="10,6"
                                        Margin="0,0,0,8">
                                    <TextBlock Text="Scene Packs"
                                               FontWeight="SemiBold"
                                               Foreground="#11111B"/>
                                </Border>
                                <TreeView ItemsSource="{Binding ScenePackTree}"
                                          SelectedItem="{Binding SelectedFolder}"
                                          Background="Transparent">
                                    <TreeView.ItemTemplate>
                                        <TreeDataTemplate ItemsSource="{Binding Children}" x:DataType="vm:FolderTreeNode">
                                            <Border Padding="6,8"
                                                    Background="Transparent"
                                                    PointerPressed="OnPackTreeItemPointerPressed">
                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                    <PathIcon Data="{Binding IconData}"
                                                              Width="20" Height="20"
                                                              Foreground="{StaticResource EditorSuccess}"/>
                                                    <TextBlock Text="{Binding Name}"
                                                               VerticalAlignment="Center"
                                                               TextWrapping="NoWrap"
                                                               MaxWidth="260"/>
                                                </StackPanel>
                                            </Border>
                                        </TreeDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                                <Border IsVisible="{Binding !ScenePackTree.Count}"
                                        Background="{StaticResource EditorSurfaceRaised}"
                                        Padding="16,12"
                                        Margin="0,4">
                                    <TextBlock Text="No packs in scene"
                                               Foreground="{StaticResource EditorTextMuted}"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>

                            <Border Height="1" Background="{StaticResource EditorPanelBorder}"/>

                            <StackPanel>
                                <Border Background="{StaticResource EditorPanelElevated}"
                                        Padding="10,6"
                                        Margin="0,0,0,8">
                                    <TextBlock Text="Available Packs"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource EditorTextSecondary}"/>
                                </Border>
                                <TreeView ItemsSource="{Binding AvailablePackTree}"
                                          SelectedItem="{Binding SelectedFolder}"
                                          Background="Transparent">
                                    <TreeView.ItemTemplate>
                                        <TreeDataTemplate ItemsSource="{Binding Children}" x:DataType="vm:FolderTreeNode">
                                            <Border Padding="6,8"
                                                    Background="Transparent"
                                                    PointerPressed="OnPackTreeItemPointerPressed">
                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                    <PathIcon Data="{Binding IconData}"
                                                              Width="20" Height="20"
                                                              Foreground="{StaticResource EditorTextMuted}"/>
                                                    <TextBlock Text="{Binding Name}"
                                                               VerticalAlignment="Center"
                                                               TextWrapping="NoWrap"
                                                               MaxWidth="260"
                                                               Foreground="{StaticResource EditorTextSecondary}"/>
                                                </StackPanel>
                                            </Border>
                                        </TreeDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                                <Border IsVisible="{Binding !AvailablePackTree.Count}"
                                        Background="{StaticResource EditorSurfaceRaised}"
                                        Padding="16,12"
                                        Margin="0,4">
                                    <TextBlock Text="No available packs"
                                               Foreground="{StaticResource EditorTextMuted}"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto">
                <Border Grid.Row="0"
                        Background="{StaticResource EditorPanelSecondaryBackground}"
                        Padding="16,10">
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <ScrollViewer Grid.Column="0"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled"
                                      VerticalAlignment="Center">
                            <ItemsControl ItemsSource="{Binding SelectedTab.Breadcrumbs}"
                                          VerticalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:BreadcrumbItem">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Command="{Binding $parent[ItemsControl].DataContext.NavigateToCommand}"
                                                    CommandParameter="{Binding Path}"
                                                    Padding="10,8"
                                                    Cursor="Hand"
                                                    Classes="ghost"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           Classes="body"/>
                                            </Button>
                                            <TextBlock Text="/"
                                                       Classes="body"
                                                       VerticalAlignment="Center"
                                                       Margin="4,0"
                                                       Foreground="{StaticResource EditorTextMuted}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <ComboBox Grid.Column="1"
                                  SelectedIndex="{Binding FilterIndex}"
                                  MinWidth="150"
                                  VerticalAlignment="Center"
                                  Margin="16,0">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Models"/>
                            <ComboBoxItem Content="Textures"/>
                            <ComboBoxItem Content="Materials"/>
                            <ComboBoxItem Content="Shaders"/>
                            <ComboBoxItem Content="Scenes"/>
                        </ComboBox>

                        <TextBox Grid.Column="2"
                                 Text="{Binding SearchText}"
                                 Watermark="Search..."
                                 MinWidth="180"
                                 MaxWidth="320"
                                 Width="240"
                                 VerticalAlignment="Center">
                            <TextBox.InnerLeftContent>
                                <ui:SymbolIcon Symbol="Find" FontSize="{StaticResource IconSizeMedium}" Margin="10,0,0,0"/>
                            </TextBox.InnerLeftContent>
                        </TextBox>
                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        x:Name="ContentGridBorder"
                        Margin="16,12"
                        Background="{StaticResource EditorSurfaceRaised}"
                        BorderBrush="{StaticResource EditorPanelBorder}"
                        BorderThickness="1">
                    <ListBox x:Name="ContentGrid"
                             ItemsSource="{Binding SelectedTab.Items}"
                             SelectedItem="{Binding SelectedItem}"
                             SelectionMode="Single"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             DoubleTapped="OnItemDoubleTapped"
                             PointerPressed="OnContentGridPointerPressed">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:ContentItem">
                                <Border Classes="content-tile"
                                        ToolTip.Tip="{Binding TypeLabel}"
                                        PointerPressed="OnItemPointerPressed">
                                    <Grid RowDefinitions="Auto,*,Auto">
                                        <PathIcon Grid.Row="0"
                                                  Data="{Binding IconData}"
                                                  Width="56" Height="56"
                                                  Foreground="{StaticResource EditorTextSecondary}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="0,8,0,0"/>

                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Name}"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   FontSize="{StaticResource FontSizeCaption}"
                                                   MaxLines="3"
                                                   Margin="0,10,0,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Top"
                                                   ToolTip.Tip="{Binding Name}"/>

                                        <Border Grid.Row="2"
                                                IsVisible="{Binding HasModelInfo}"
                                                Classes="badge"
                                                HorizontalAlignment="Center"
                                                Margin="0,6,0,0">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="{Binding MeshCount}" FontSize="{StaticResource FontSizeCaption}" Foreground="#FFFFFF"/>
                                                <TextBlock Text="M" FontSize="{StaticResource FontSizeCaption}" Foreground="#FFFFFF"/>
                                                <TextBlock Text="{Binding AnimationCount}" FontSize="{StaticResource FontSizeCaption}" IsVisible="{Binding HasSkeleton}" Foreground="#FFFFFF"/>
                                                <TextBlock Text="A" FontSize="{StaticResource FontSizeCaption}" IsVisible="{Binding HasSkeleton}" Foreground="#FFFFFF"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Border Grid.Row="2"
                        Background="{StaticResource EditorPanelSecondaryBackground}"
                        Padding="20,10"
                        IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding StatusMessage}"
                               Classes="body"
                               Foreground="{StaticResource EditorTextMuted}"/>
                </Border>
            </Grid>
        </Grid>

        <views:InlineContextMenu x:Name="InlineMenu" ZIndex="100"/>

        <Border IsVisible="{Binding IsRenameDialogOpen}"
                Classes="dialog-overlay"
                ZIndex="200">
            <Border Background="{StaticResource EditorPanelBackground}"
                    BorderBrush="{StaticResource EditorPanelBorder}"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="24"
                    MinWidth="380">
                <StackPanel Spacing="18">
                    <TextBlock Text="{Binding RenameDialogTitle}"
                               Classes="subtitle"/>
                    <TextBox Text="{Binding RenameDialogValue, Mode=TwoWay}"
                             Watermark="Enter new name"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="10">
                        <Button Content="Cancel"
                                Command="{Binding CancelRenameCommand}"
                                Padding="20,10"/>
                        <Button Content="Rename"
                                Command="{Binding ConfirmRenameCommand}"
                                Classes="accent"
                                Padding="20,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Panel>

</UserControl>
