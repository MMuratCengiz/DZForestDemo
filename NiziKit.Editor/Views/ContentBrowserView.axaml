<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:views="using:NiziKit.Editor.Views"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="NiziKit.Editor.Views.ContentBrowserView"
             x:DataType="vm:ContentBrowserViewModel">

    <Panel>
        <!-- Responsive sidebar with min/max constraints -->
        <Grid ColumnDefinitions="Auto,*">
            <Border Grid.Column="0"
                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,1,0"
                    Padding="6"
                    MinWidth="150"
                    MaxWidth="250"
                    Width="180">
                <Grid RowDefinitions="Auto,*">
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="6,4,0,8">
                        <TextBlock Text="Packs"
                                   Classes="body-large"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                        <Button Grid.Column="1"
                                Command="{Binding CreatePackCommand}"
                                ToolTip.Tip="Create new pack"
                                Padding="6">
                            <ui:SymbolIcon Symbol="Add" FontSize="14"/>
                        </Button>
                    </Grid>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding PackTree}"
                             SelectedItem="{Binding SelectedFolder}">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:FolderTreeNode">
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="4,2">
                                    <PathIcon Data="{Binding IconData}"
                                              Width="16" Height="16"
                                              Foreground="{DynamicResource AccentFillColorDefaultBrush}"/>
                                    <TextBlock Text="{Binding Name}"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto">
                <Grid Grid.Row="0"
                      ColumnDefinitions="*,Auto,Auto"
                      Margin="8,8,8,4">
                    <ScrollViewer Grid.Column="0"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled"
                                  VerticalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding SelectedTab.Breadcrumbs}"
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:BreadcrumbItem">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Command="{Binding $parent[ItemsControl].DataContext.NavigateToCommand}"
                                                CommandParameter="{Binding Path}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="6,8"
                                                Cursor="Hand"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        </Button>
                                        <TextBlock Text="/"
                                                   VerticalAlignment="Center"
                                                   Margin="2,0"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <ComboBox Grid.Column="1"
                              SelectedIndex="{Binding FilterIndex}"
                              MinWidth="120"
                              VerticalAlignment="Center"
                              Margin="8,0">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Models"/>
                        <ComboBoxItem Content="Textures"/>
                        <ComboBoxItem Content="Materials"/>
                        <ComboBoxItem Content="Shaders"/>
                        <ComboBoxItem Content="Scenes"/>
                    </ComboBox>

                    <TextBox Grid.Column="2"
                             Text="{Binding SearchText}"
                             Watermark="Search..."
                             MinWidth="120"
                             MaxWidth="250"
                             Width="180"
                             VerticalAlignment="Center">
                        <TextBox.InnerLeftContent>
                            <ui:SymbolIcon Symbol="Find" FontSize="14" Margin="8,0,0,0"/>
                        </TextBox.InnerLeftContent>
                    </TextBox>
                </Grid>

                <Border Grid.Row="1"
                        x:Name="ContentGridBorder"
                        Margin="8,4,8,8"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="{DynamicResource ControlCornerRadius}">
                    <ListBox x:Name="ContentGrid"
                             ItemsSource="{Binding SelectedTab.Items}"
                             SelectedItem="{Binding SelectedItem}"
                             SelectionMode="Single"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             DoubleTapped="OnItemDoubleTapped"
                             PointerPressed="OnContentGridPointerPressed">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:ContentItem">
                                <!-- Content tile with responsive sizing -->
                                <Border Classes="content-tile"
                                        ToolTip.Tip="{Binding TypeLabel}"
                                        PointerPressed="OnItemPointerPressed">
                                    <Grid RowDefinitions="*,Auto,Auto">
                                        <PathIcon Grid.Row="0"
                                                  Data="{Binding IconData}"
                                                  Width="40" Height="40"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>

                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Name}"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextAlignment="Center"
                                                   MaxHeight="40"
                                                   Margin="0,8,0,0"
                                                   ToolTip.Tip="{Binding Name}"/>

                                        <Border Grid.Row="2"
                                                IsVisible="{Binding HasModelInfo}"
                                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                CornerRadius="4"
                                                Padding="6,2"
                                                HorizontalAlignment="Center"
                                                Margin="0,4,0,0">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="{Binding MeshCount}" Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                                <TextBlock Text="M" Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                                <TextBlock Text="{Binding AnimationCount}" IsVisible="{Binding HasSkeleton}" Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                                <TextBlock Text="A" IsVisible="{Binding HasSkeleton}" Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Border Grid.Row="2"
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        Padding="12,6"
                        IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               TextTrimming="CharacterEllipsis"/>
                </Border>
            </Grid>
        </Grid>

        <views:InlineContextMenu x:Name="InlineMenu"/>
    </Panel>

</UserControl>
