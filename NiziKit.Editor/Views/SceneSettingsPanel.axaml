<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="NiziKit.Editor.Views.SceneSettingsPanel"
             x:DataType="vm:EditorViewModel">

    <StackPanel Spacing="16">
        <Border Background="{StaticResource EditorSurfaceRaised}"
                BorderBrush="{StaticResource EditorPanelBorder}"
                BorderThickness="1"
                Padding="14">
            <StackPanel Spacing="14">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Skybox"
                               Classes="subtitle"
                               VerticalAlignment="Center"/>
                    <Border Grid.Column="1"
                            Background="{StaticResource EditorAccentBrush}"
                            Padding="8,4">
                        <ui:SymbolIcon Symbol="Globe" FontSize="{StaticResource IconSizeSmall}" Foreground="#FFFFFF"/>
                    </Border>
                </Grid>

                <StackPanel x:Name="SkyboxFacesPanel" Spacing="8"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
