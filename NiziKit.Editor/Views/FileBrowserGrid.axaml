<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:services="using:NiziKit.Editor.Services"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="NiziKit.Editor.Views.FileBrowserGrid"
             x:DataType="vm:FileBrowserViewModel">

    <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0"
                Background="{StaticResource EditorPanelSecondaryBackground}"
                Padding="12,10"
                Margin="0,0,0,8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0"
                        Command="{Binding NavigateUpCommand}"
                        IsEnabled="{Binding CanNavigateUp}"
                        Padding="10"
                        ToolTip.Tip="Go up"
                        VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="ChevronUp" FontSize="{StaticResource IconSizeMedium}"/>
                </Button>

                <ScrollViewer Grid.Column="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              VerticalAlignment="Center"
                              Margin="12,0">
                    <ItemsControl ItemsSource="{Binding BreadcrumbParts}"
                                  VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:BreadcrumbItem">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Command="{Binding $parent[ItemsControl].DataContext.NavigateToCommand}"
                                            CommandParameter="{Binding Path}"
                                            Padding="10,8"
                                            Cursor="Hand"
                                            Classes="ghost"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   Classes="body"/>
                                    </Button>
                                    <TextBlock Text="/"
                                               Classes="body"
                                               VerticalAlignment="Center"
                                               Margin="4,0"
                                               Foreground="{StaticResource EditorTextMuted}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <ComboBox Grid.Column="2"
                          SelectedIndex="{Binding FilterIndex}"
                          MinWidth="150">
                    <ComboBoxItem Content="All Files"/>
                    <ComboBoxItem Content="Models"/>
                    <ComboBoxItem Content="Textures"/>
                    <ComboBoxItem Content="Materials"/>
                    <ComboBoxItem Content="Scenes"/>
                    <ComboBoxItem Content="Packs"/>
                </ComboBox>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Background="{StaticResource EditorSurfaceRaised}"
                BorderBrush="{StaticResource EditorPanelBorder}"
                BorderThickness="1">
            <ListBox x:Name="FileGrid"
                     ItemsSource="{Binding Entries}"
                     SelectedItem="{Binding SelectedEntry}"
                     SelectionMode="Single"
                     Background="Transparent"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="services:FileEntry">
                        <Border Classes="content-tile"
                                ToolTip.Tip="{Binding Name}">
                            <Grid RowDefinitions="Auto,*">
                                <PathIcon Grid.Row="0"
                                          Data="{Binding IconData}"
                                          Width="56" Height="56"
                                          Foreground="{StaticResource EditorTextSecondary}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="1"
                                           Text="{Binding Name}"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           FontSize="{StaticResource FontSizeCaption}"
                                           MaxLines="3"
                                           Margin="0,10,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           ToolTip.Tip="{Binding Name}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
