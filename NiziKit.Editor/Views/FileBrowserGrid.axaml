<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NiziKit.Editor.ViewModels"
             xmlns:services="using:NiziKit.Editor.Services"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="NiziKit.Editor.Views.FileBrowserGrid"
             x:DataType="vm:FileBrowserViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                CornerRadius="{DynamicResource ControlCornerRadius}"
                Padding="12,8"
                Margin="0,0,0,8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0"
                        Command="{Binding NavigateUpCommand}"
                        IsEnabled="{Binding CanNavigateUp}"
                        Padding="10"
                        ToolTip.Tip="Go up"
                        VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="ChevronUp" FontSize="18"/>
                </Button>

                <ScrollViewer Grid.Column="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Margin="12,0">
                    <ItemsControl ItemsSource="{Binding BreadcrumbParts}"
                                  VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:BreadcrumbItem">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{Binding Name}"
                                            Command="{Binding $parent[ItemsControl].DataContext.NavigateToCommand}"
                                            CommandParameter="{Binding Path}"
                                            Padding="10,6"
                                            MaxWidth="180">
                                        <Button.Styles>
                                            <Style Selector="Button > ContentPresenter > TextBlock">
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    <TextBlock Text="/"
                                               VerticalAlignment="Center"
                                               Margin="4,0"
                                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <ComboBox Grid.Column="2"
                          SelectedIndex="{Binding FilterIndex}"
                          MinWidth="140">
                    <ComboBoxItem Content="All Files"/>
                    <ComboBoxItem Content="Models"/>
                    <ComboBoxItem Content="Textures"/>
                    <ComboBoxItem Content="Materials"/>
                    <ComboBoxItem Content="Scenes"/>
                    <ComboBoxItem Content="Packs"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- File Grid -->
        <ListBox Grid.Row="1"
                 x:Name="FileGrid"
                 ItemsSource="{Binding Entries}"
                 SelectedItem="{Binding SelectedEntry}"
                 Background="Transparent"
                 SelectionMode="Single"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="services:FileEntry">
                    <Border Width="120"
                            Height="120"
                            Margin="6"
                            Padding="12"
                            CornerRadius="{DynamicResource ControlCornerRadius}"
                            Background="Transparent">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="10">
                            <PathIcon Data="{Binding IconData}"
                                      Width="40"
                                      Height="40"
                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="{Binding Name}"
                                       TextTrimming="CharacterEllipsis"
                                       TextAlignment="Center"
                                       MaxWidth="100"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       ToolTip.Tip="{Binding Name}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
