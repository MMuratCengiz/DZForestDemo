<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NiziKit.Editor.Views.DraggableValueEditor">

    <Border Background="{StaticResource EditorPanelElevated}"
            BorderBrush="{StaticResource EditorPanelBorder}"
            BorderThickness="1"
            CornerRadius="{StaticResource RadiusMedium}"
            ClipToBounds="True">
        <Grid ColumnDefinitions="Auto,*">
            <Border Grid.Column="0"
                    x:Name="DragLabel"
                    Background="{StaticResource EditorDragLabelBg}"
                    Padding="8,6"
                    Cursor="SizeWestEast"
                    MinWidth="30">
                <TextBlock x:Name="LabelText"
                           Text="X"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <TextBox Grid.Column="1"
                     x:Name="ValueTextBox"
                     CornerRadius="0"
                     BorderThickness="0"
                     Background="Transparent"
                     Padding="8,6"
                     MinWidth="50"/>
        </Grid>
    </Border>
</UserControl>
