<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <x:Double x:Key="FontSizeCaption">20</x:Double>
        <x:Double x:Key="FontSizeBody">22</x:Double>
        <x:Double x:Key="FontSizeBodyLarge">24</x:Double>
        <x:Double x:Key="FontSizeSubtitle">26</x:Double>
        <x:Double x:Key="FontSizeTitle">30</x:Double>
        <x:Double x:Key="FontSizeHeader">36</x:Double>

        <x:Double x:Key="IconSizeXS">14</x:Double>
        <x:Double x:Key="IconSizeSmall">18</x:Double>
        <x:Double x:Key="IconSizeBase">22</x:Double>
        <x:Double x:Key="IconSizeMedium">24</x:Double>
        <x:Double x:Key="IconSizeLarge">26</x:Double>
        <x:Double x:Key="IconSizeXL">36</x:Double>
        <x:Double x:Key="IconSizeXXL">48</x:Double>
        <x:Double x:Key="IconSizeHuge">56</x:Double>

        <x:Double x:Key="PanelMinWidth">280</x:Double>
        <x:Double x:Key="PanelMaxWidth">500</x:Double>
        <x:Double x:Key="PanelPreferredWidth">380</x:Double>

        <x:Double x:Key="TileMinWidth">100</x:Double>
        <x:Double x:Key="TileMaxWidth">150</x:Double>
        <x:Double x:Key="TilePreferredWidth">120</x:Double>
        <x:Double x:Key="TilePreferredHeight">150</x:Double>

        <x:Double x:Key="DialogMinWidth">600</x:Double>
        <x:Double x:Key="DialogMaxWidth">1400</x:Double>
        <x:Double x:Key="DialogMinHeight">400</x:Double>
        <x:Double x:Key="DialogMaxHeight">900</x:Double>

        <x:Double x:Key="SpacingXS">4</x:Double>
        <x:Double x:Key="SpacingSM">8</x:Double>
        <x:Double x:Key="SpacingMD">12</x:Double>
        <x:Double x:Key="SpacingLG">16</x:Double>
        <x:Double x:Key="SpacingXL">24</x:Double>

        <CornerRadius x:Key="RadiusNone">0</CornerRadius>
        <CornerRadius x:Key="RadiusSmall">2</CornerRadius>
        <CornerRadius x:Key="RadiusMedium">4</CornerRadius>
        <CornerRadius x:Key="RadiusLarge">6</CornerRadius>

        <SolidColorBrush x:Key="DialogOverlayBrush" Color="#E0181825"/>
    </Styles.Resources>

    <Style Selector="Border.dialog-overlay">
        <Setter Property="Background" Value="{StaticResource DialogOverlayBrush}"/>
    </Style>

    <Style Selector="Border.spacer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>

    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextMuted}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style Selector="TextBlock.body">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style Selector="TextBlock.body-large">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBodyLarge}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style Selector="TextBlock.subtitle">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSubtitle}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeTitle}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style Selector="TextBox">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Background" Value="{DynamicResource EditorPanelElevated}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
    </Style>

    <Style Selector="Button">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Background" Value="{DynamicResource EditorPanelElevated}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource EditorHover}"/>
    </Style>

    <Style Selector="Button.accent">
        <Setter Property="Background" Value="{DynamicResource EditorAccentBrush}"/>
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorAccentDarkBrush}"/>
    </Style>

    <Style Selector="Button.accent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource EditorAccentLightBrush}"/>
    </Style>

    <Style Selector="Button.danger">
        <Setter Property="Background" Value="{DynamicResource EditorError}"/>
        <Setter Property="Foreground" Value="#FF11111B"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="Button.ghost">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="Button.ghost:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource EditorHover}"/>
    </Style>

    <Style Selector="ToggleButton">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Background" Value="{DynamicResource EditorPanelElevated}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
    </Style>

    <Style Selector="ToggleButton:checked /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource EditorAccentBrush}"/>
    </Style>

    <Style Selector="ComboBox">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Background" Value="{DynamicResource EditorPanelElevated}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
    </Style>

    <Style Selector="ComboBoxItem">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
    </Style>

    <Style Selector="MenuItem">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
    </Style>

    <Style Selector="TabItem">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextSecondary}"/>
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
    </Style>

    <Style Selector="TreeViewItem">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
    </Style>

    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource EditorSelected}"/>
    </Style>

    <Style Selector="CheckBox">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
    </Style>

    <Style Selector="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
    </Style>

    <Style Selector="Label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorTextPrimary}"/>
    </Style>

    <Style Selector="ProgressBar">
        <Setter Property="Background" Value="{DynamicResource EditorPanelElevated}"/>
        <Setter Property="Foreground" Value="{DynamicResource EditorAccentBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
    </Style>

    <Style Selector="Slider">
        <Setter Property="Foreground" Value="{DynamicResource EditorAccentBrush}"/>
    </Style>

    <Style Selector="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="Border.editor-panel">
        <Setter Property="Background" Value="{DynamicResource EditorPanelBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusNone}"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <Style Selector="Border.editor-card">
        <Setter Property="Background" Value="{DynamicResource EditorSurfaceRaised}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <Style Selector="Border.editor-card:pointerover">
        <Setter Property="Background" Value="{DynamicResource EditorSurfaceOverlay}"/>
    </Style>

    <Style Selector="Border.editor-section">
        <Setter Property="Background" Value="{DynamicResource EditorPanelSecondaryBackground}"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <Style Selector="Border.editor-header">
        <Setter Property="Background" Value="{DynamicResource EditorPanelSecondaryBackground}"/>
        <Setter Property="Padding" Value="20,14"/>
    </Style>

    <Style Selector="Border.editor-footer">
        <Setter Property="Background" Value="{DynamicResource EditorPanelSecondaryBackground}"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <Style Selector="Border.content-tile">
        <Setter Property="Width" Value="180"/>
        <Setter Property="Height" Value="180"/>
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Padding" Value="14"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="Background" Value="{DynamicResource EditorSurfaceRaised}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style Selector="Border.content-tile:pointerover">
        <Setter Property="Background" Value="{DynamicResource EditorSurfaceOverlay}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorAccentBrush}"/>
    </Style>

    <Style Selector="Border.dialog-container">
        <Setter Property="Background" Value="{DynamicResource EditorPanelBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
        <Setter Property="MinWidth" Value="{StaticResource DialogMinWidth}"/>
        <Setter Property="MaxWidth" Value="{StaticResource DialogMaxWidth}"/>
        <Setter Property="MinHeight" Value="{StaticResource DialogMinHeight}"/>
        <Setter Property="MaxHeight" Value="{StaticResource DialogMaxHeight}"/>
    </Style>

    <Style Selector="Border.dialog-container-large">
        <Setter Property="Background" Value="{DynamicResource EditorPanelBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
        <Setter Property="MinWidth" Value="800"/>
        <Setter Property="MaxWidth" Value="1600"/>
        <Setter Property="MinHeight" Value="500"/>
        <Setter Property="MaxHeight" Value="1000"/>
    </Style>

    <Style Selector="Border.divider-horizontal">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>

    <Style Selector="Border.divider-vertical">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="Margin" Value="8,0"/>
    </Style>

    <Style Selector="Border.status-success">
        <Setter Property="Background" Value="#2DA6E3A1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorSuccess}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style Selector="Border.status-warning">
        <Setter Property="Background" Value="#2DF9E2AF"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorWarning}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style Selector="Border.status-error">
        <Setter Property="Background" Value="#2DF38BA8"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorError}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style Selector="Border.status-info">
        <Setter Property="Background" Value="#2D509080"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorInfo}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style Selector="Border.badge">
        <Setter Property="Background" Value="{DynamicResource EditorAccentBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style Selector="Border.badge-muted">
        <Setter Property="Background" Value="{DynamicResource EditorPanelElevated}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style Selector="Menu">
        <Setter Property="Background" Value="{DynamicResource EditorPanelBackground}"/>
    </Style>

    <Style Selector="ContextMenu">
        <Setter Property="Background" Value="{DynamicResource EditorPanelBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource EditorPanelBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
    </Style>

    <Style Selector="TreeView">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ListBox">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

</Styles>
