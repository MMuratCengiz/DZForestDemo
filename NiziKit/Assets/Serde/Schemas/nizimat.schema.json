{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nizikit.dev/schemas/nizimat.schema.json",
  "title": "NiziKit Material",
  "description": "Schema for NiziKit material definition files (.nizimat.json)",
  "type": "object",
  "required": ["name", "shader"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique name identifier for the material"
    },
    "shader": {
      "type": "string",
      "description": "Relative path to the shader program JSON file (.nizishp.json)"
    },
    "variant": {
      "type": "string",
      "description": "Shader variant name to select a specific shader permutation"
    },
    "textures": {
      "$ref": "#/$defs/textures"
    }
  },
  "$defs": {
    "textures": {
      "type": "object",
      "description": "Texture bindings for the material",
      "$showEmpty": true,
      "properties": {
        "albedo": {
          "type": "string",
          "description": "Albedo/diffuse texture",
          "$assetRef": "Texture"
        },
        "normal": {
          "type": "string",
          "description": "Normal map texture",
          "$assetRef": "Texture"
        },
        "metallic": {
          "type": "string",
          "description": "Metallic texture",
          "$assetRef": "Texture"
        },
        "roughness": {
          "type": "string",
          "description": "Roughness texture",
          "$assetRef": "Texture"
        }
      }
    }
  }
}
